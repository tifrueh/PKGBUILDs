# Maintainer: Timo Fr√ºh <timo.frueh@icloud.com>
pkgname=the-chosen-remastered
pkgver=1.0.0
pkgrel=2
pkgdesc="A short ZORK-like text-adventure"
arch=(any)
url="https://github.com/tifrueh/the-chosen-remastered"
license=('GPL3')
depends=('ncurses')
makedepends=('meson' 'ninja')
provides=('the-chosen-remastered')
source=("$pkgname-${pkgver}.tar.gz::https://github.com/tifrueh/the-chosen-remastered/archive/refs/tags/v${pkgver}.tar.gz")
sha256sums=('088ccedf570f6a4b3e70e795255cde6bb448ffcc8d9607d8039685172f9f3735')

build() {
	cd "$pkgname-${pkgver}"
	meson setup --prefix=/usr --buildtype=plain build 
	meson compile -C build
}

package() {
	cd "$pkgname-${pkgver}"
	DESTDIR="$pkgdir" meson install -C build
}
