# Maintainer: Timo Fr√ºh <timo.frueh@icloud.com>
pkgname=lv95-converter
pkgver=1.1.1
pkgrel=0
pkgdesc="Convert LV95 to WGS84 and vice versa"
arch=('x86_64' 'armv7h' 'aarch64')
url="https://github.com/tifrueh/lv95-converter"
license=('GPL3')
makedepends=('cli11' 'pkgconf' 'meson')
source=("https://github.com/tifrueh/lv95-converter/releases/download/v$pkgver/$pkgname-v$pkgver.tar.gz")
sha256sums=("a1bef9b7aa8b146cee6faa9da5438a3e0bcd7451dfa76600ae2aeea7f2a9bb86")

build() {
	cd "$pkgname-v$pkgver"
	meson setup --prefix=/usr --buildtype=plain build
	meson compile -C build
}

package() {
	cd "$pkgname-v$pkgver"
	meson install --destdir=$pkgdir -C build
}
