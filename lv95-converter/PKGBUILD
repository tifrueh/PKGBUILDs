# Maintainer: Timo Fr√ºh <dev@tifrueh.ch>
pkgname=lv95-converter
pkgver=1.2.0
pkgrel=1
pkgdesc="Convert LV95 to WGS84 and vice versa"
arch=('x86_64' 'armv7h' 'aarch64')
url="https://github.com/tifrueh/lv95-converter"
license=('GPL-3.0-or-later')
makedepends=('cli11' 'pkgconf' 'meson')
source=("git+https://github.com/tifrueh/$pkgname.git#tag=v$pkgver?signed")
validpgpkeys=('30AB157E6A7CA2EEBAA924F75152BE9A85F22FB5')
sha256sums=('56167a2a68296b1d2b0deb216e5b3327cd4f379db796e2f02bdbaa9adca11bed')

build() {
    cd "$pkgname"
    meson setup --prefix=/usr --buildtype=plain build
    meson compile -C build
}

check() {
    cd "$pkgname"
    meson test -C build
}

package() {
    cd "$pkgname"
    meson install --destdir=$pkgdir -C build
}
